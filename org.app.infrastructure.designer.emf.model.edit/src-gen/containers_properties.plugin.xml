<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

 <plugin>

  <!-- EEF extensions -->
   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="https://github.com/rdediosb/AppDesigner"
            class="containers.providers.ContainersEEFAdapterFactory"
            supportedTypes="org.eclipse.emf.eef.runtime.providers.PropertiesEditingProvider"/>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="containers.providers.ContainersPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>

  <!-- Tabbed properties views extension -->
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="containers.properties"
            labelProvider="org.eclipse.emf.eef.runtime.ui.utils.EEFLabelProvider">
         <propertyCategory
               category="default">
         </propertyCategory>
         <propertyCategory
               category="extended">
         </propertyCategory>
         <propertyCategory
               category="advanced">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="containers.properties">
         <propertyTab
               id="Base"
               label="Base"
               category="default">
         </propertyTab>

      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="containers.properties">
         <propertySection
               class="containers.parts.forms.ServicePropertiesEditionPartForm"
               filter="containers.providers.ServicePropertiesEditionProvider$EditionFilter"
               id="containers.section.Service"
               tab="Base">
         </propertySection>
         <propertySection
               class="containers.parts.forms.NamedElementPropertiesEditionPartForm"
               filter="containers.providers.NamedElementPropertiesEditionProvider$EditionFilter"
               id="containers.section.NamedElement"
               tab="Base">
         </propertySection>
         <propertySection
               class="containers.parts.forms.ComposePropertiesEditionPartForm"
               filter="containers.providers.ComposePropertiesEditionProvider$EditionFilter"
               id="containers.section.Compose"
               tab="Base">
         </propertySection>
         <propertySection
               class="containers.parts.forms.EnvPropertiesEditionPartForm"
               filter="containers.providers.EnvPropertiesEditionProvider$EditionFilter"
               id="containers.section.Env"
               tab="Base">
         </propertySection>
         <propertySection
               class="containers.parts.forms.VolumePropertiesEditionPartForm"
               filter="containers.providers.VolumePropertiesEditionProvider$EditionFilter"
               id="containers.section.Volume"
               tab="Base">
         </propertySection>
         <propertySection
               class="containers.parts.forms.PortMappingPropertiesEditionPartForm"
               filter="containers.providers.PortMappingPropertiesEditionProvider$EditionFilter"
               id="containers.section.PortMapping"
               tab="Base">
         </propertySection>
      </propertySections>
   </extension>
 </plugin>
